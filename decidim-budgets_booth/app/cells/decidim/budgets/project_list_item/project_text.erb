
<div class="budget-list__text card__text margin-bottom-0">
  <div>
    <% if voting_open? %>
      <% if show_full_description? %>
        <h3 class="text-left margin-bottom-0">
          <%= resource_title %>
        </h3>
      <% else %>
        <h3 class="text-left margin-bottom-0">
          <% if voting_mode? %>
            <button class="link text-left" data-open="project-modal-<%= model.id %>">
              <%= resource_title %>
            </button>
          <% else %>
            <%= link_to resource_title, resource_path, class: "link" %>
          <% end %>
        </h3>
      <% end %>
    <% else %>
      <%= link_to resource_path, class: "link" do %>
        <h3 class="text-left margin-bottom-0">
          <%= cell("decidim/budgets/project_selected_status", model) %>
          <%= resource_title %>
        </h3>
      <% end %>
    <% end %>

    <div>
      <%= resource_text %>
    </div>
    <% if !show_full_description? %>
      <% if voting_mode? %>
        <button class="link" data-open="project-modal-<%= model.id %>">
          <%= t("read_more", scope: "decidim.budgets.project_list_item") %>
        </button>
      <% else %>
        <%= link_to t("read_more", scope: "decidim.budgets.project_list_item"), resource_path, class: "link" %>
      <% end %>
    <% end %>
  </div>
</div>
