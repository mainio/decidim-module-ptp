<%= decidim_modal id: "thanks-message", data: { session: thanks_popup? } do %>
  <div data-dialog-container>
    <h4 id="exit-voting-notification-label"><%= t(".title") %></h4>

    <% unless current_workflow.try(:hide_image_in_popup?) %>
      <div class="row">
        <div class="columns text-center small-12 medium-4 medium-offset-4 voting-help-item m-bottom">
          <div class="circle active">
            <%= render partial: "decidim/budgets/partials/svgs/icon-ballot-box", formats: [:svg] %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row text-left margin-bottom-2">
      <%= vote_success_content %>
    </div>
  </div>

  <div data-dialog-actions>
    <div class="columns medium-8 medium-offset-2">
      <button class="button expanded" data-close type="button">
        <%= t".continue" %>
      </button>
    </div>
  </div>
<% end %>
