<%= decidim_modal id: "project-modal-#{project.id}" do %>
  <div data-dialog-container class="exit-notification-label">
    <h3 id="exit-notification-label" class="h3"><%= decidim_sanitize(translated_attribute(project.title)) %></h3>

    <div class="row text-left">
      <% if project.category %>
        <p><strong><%= t ".category" %></strong><%= decidim_sanitize(translated_attribute(project.category.try(:name))) %></p>
      <% end %>

      <% if project.scope %>
        <p><strong><%= t ".scope" %></strong><%= decidim_sanitize(translated_attribute(project.scope.try(:name))) || t("decidim.scopes.global") %></p>
      <% end %>
      <p><strong><%= t ".budget_amount" %></strong><%= budget_to_currency(project.budget_amount) %></p>
      <%= raw decidim_sanitize(translated_attribute(project.description)) %>
    </div>
  </div>

  <div data-dialog-actions>
    <%= cell("decidim/budgets/project_vote_button", project, scale_up: true) %>
  </div>
<% end %>
