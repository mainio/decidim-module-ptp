<%= decidim_modal id: "project-modal-#{project.id}" do %>
  <div class="exit-notification-label mb-6">
    <h2 id="exit-notification-label" class="h2"><%= decidim_sanitize(translated_attribute(project.title)) %></h2>
  </div>

  <div data-dialog-container>
    <div class="row text-left space-y-2">
      <p class="h6"><strong><%= t ".budget_amount" %></strong><%= budget_to_currency(project.budget_amount) %></p>

      <% if project.category %>
        <p class="h6"><strong><%= t ".category" %></strong><%= decidim_sanitize(translated_attribute(project.category.try(:name))) %></p>
      <% end %>

      <% if project.scope %>
        <p class="h6"><strong><%= t ".scope" %></strong><%= decidim_sanitize(translated_attribute(project.scope.try(:name))) || t("decidim.scopes.global") %></p>
      <% end %>

      <div class="row text-left text-md">
        <%= raw decidim_sanitize(translated_attribute(project.description)) %>
      </div>
    </div>
  </div>

  <div data-dialog-actions class="w-10">
    <button data-dialog-close="project-modal-<%= project.id %>" class="button button__lg button__transparent-secondary text-sm md:text-lg"><%= t(".close_project") %></button>
  </div>
<% end %>
